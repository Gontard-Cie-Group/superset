COMPOSE_PROJECT_NAME=superset

# database configurations
DATABASE_DB=superset
DATABASE_HOST=db
DATABASE_PORT=5432
DATABASE_DIALECT=postgresql
POSTGRES_DB=superset
POSTGRES_USER=POSTGRES_USER
POSTGRES_PASSWORD=POSTGRES_PASSWORD
DATABASE_PASSWORD=DATABASE_PASSWORD
DATABASE_USER=DATABASE_USER


# Add the mapped in /app/pythonpath_docker which allows devs to override stuff
PYTHONPATH=/app/pythonpath:/app/docker/pythonpath_dev
REDIS_HOST=redis
REDIS_PORT=6379

GLOBAL_ASYNC_QUERIES=true

FLASK_DEBUG=false
SUPERSET_ENV=production
SUPERSET_LOAD_EXAMPLES=no
CYPRESS_CONFIG=false
SUPERSET_PORT=8088
MAPBOX_API_KEY=MAPBOX_API_KEY

# openssl rand -base64 42
SUPERSET_SECRET_KEY=SUPERSET_SECRET_KEY

GLOBAL_ASYNC_QUERIES_JWT_SECRET=GLOBAL_ASYNC_QUERIES_JWT_SECRET

ENABLE_PLAYWRIGHT=false
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
BUILD_SUPERSET_FRONTEND_IN_DOCKER=true

CONSUL_HOST=CONSUL_HOST
CONSUL_PORT=CONSUL_PORT
KEYCLOAK_URL=KEYCLOAK_URL
KEYCLOAK_CLIENT_ID=KEYCLOAK_CLIENT_ID
KEYCLOAK_CLIENT_SECRET=KEYCLOAK_CLIENT_SECRET
POST_LOGOUT_REDIRECT_URL=/login
CONSUL_SERVICE_NAME=CONSUL_SERVICE_NAME
GUEST_TOKEN_JWT_SECRET=GUEST_TOKEN_JWT_SECRET
GUEST_TOKEN_JWT_EXP_SECONDS=GUEST_TOKEN_JWT_EXP_SECONDS


